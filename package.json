{
  "name": "prompt2prod",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xilosada/prompt2prod.git"
  },
  "homepage": "https://github.com/xilosada/prompt2prod#readme",
  "bugs": {
    "url": "https://github.com/xilosada/prompt2prod/issues"
  },
  "engines": {
    "node": ">=20 <24"
  },
  "scripts": {
    "dev": "pnpm --filter @prompt2prod/api dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "lint": "eslint . --ext .ts",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "check": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm test && pnpm build",
    "ci:local": "pnpm check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
